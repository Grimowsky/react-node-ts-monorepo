{
  "name": "nodejs-ts-template",
  "version": "1.0.0",
  "description": "NodeJS TS Template\u001b[D\u001b[D\u001b[D\u001b[D\u001b[D\u001b[D\u001b[D\u001b[D\u001b[t\u001b[F\u001b[B",
  "main": "index.js",
  "scripts": {
    "ts-node": "ts-node ./src/index.ts",
    "tsc": "tsc",
    "build": "tsc -p tsconfig.prod.json",
    "server:start": "nodemon -L ./src/index.ts",
    "dev": "concurrently --kill-others \"npm run prisma:generate:dev\" \"npm run server:start\"",
    "prisma:generate:dev": "prisma generate --watch",
    "prisma:generate": "prisma generate",
    "prisma:migrate:diff": "prisma migrate diff",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:seed": "npx prisma db seed",
    "prisma:populate": "npm run prisma:migrate && npm run prisma:seed",
    "lint": "eslint \"src/**/*.{ts,tsx,js,jsx}\"",
    "lint:fix": "npm run-script lint -- --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --config jest.config.js"
  },
  "prisma": {
    "seed": "ts-node --transpile-only --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts",
    "schema": "./prisma/schema.prisma"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Grimowsky/nodeJS-ts-template.git"
  },
  "author": "Grimm",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Grimowsky/nodeJS-ts-template/issues"
  },
  "homepage": "https://github.com/Grimowsky/nodeJS-ts-template#readme",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/dotenv-safe": "^8.1.5",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jest-in-case": "^1.0.9",
    "@types/lodash": "^4.14.202",
    "@types/node": "^18.19.10",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "express": "^4.18.2",
    "node-mocks-http": "^1.14.1",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "prisma": "^5.8.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@prisma/client": "^5.8.1",
    "@types/jsonwebtoken": "^9.0.5",
    "bcrypt": "^5.1.1",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "dotenv-safe": "^8.2.0",
    "http-status-codes": "^2.3.0",
    "jest": "^29.7.0",
    "jest-in-case": "^1.0.2",
    "jest-mock-extended": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.11.0",
    "zod": "^3.20.6",
    "zod-express-middleware": "^1.4.0"
  }
}
