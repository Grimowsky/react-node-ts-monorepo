{
  "extends": "../tsconfig.common.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM.Iterable", "dom"],
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
  },
  "include": ["src"],
  "exclude": ["./src/testUtils"]
}
